<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".negocio.negocio.MiNegocioOpcionesActivity">


    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:background="#F27329"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView14"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="@string/barraGestionarNegocio"
            android:textAlignment="center"
            android:textColor="#FFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="TextContrastCheck" />

    </LinearLayout>


    <TextView
        android:id="@+id/txtRaa"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"

        android:layout_marginTop="32dp"

        android:importantForAutofill="no"
        android:text="Negocio: "
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtNegocioInfo"
        tools:ignore="HardcodedText" />


    <TextView
        android:id="@+id/txtNegocioInfo"

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="@string/miNegocioIndicacion"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4" />

    <TextView
        android:id="@+id/textView25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:text="@string/miNegocioIndicacion1"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtRaa" />

    <Button
        android:id="@+id/btnActualizarNegocio"
        android:layout_width="190dp"
        android:layout_height="55dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/circular_button_backgroundorange"
        android:onClick="irActualizarNegocio"
        android:text="@string/botonActualizarNegocio2"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toBottomOf="@+id/textView25"
        tools:ignore="VisualLintOverlap,VisualLintButtonSize,TextContrastCheck,TextSizeCheck" />

    <Button
        android:id="@+id/btnEliminarNegocio"
        android:layout_width="190dp"
        android:layout_height="55dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/circular_button_backgroundorange"
        android:onClick="eliminarNegocio"
        android:text="@string/botonEliminarNegocio"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/btnActualizarNegocio"
        tools:ignore="VisualLintOverlap,VisualLintButtonSize,TextContrastCheck" />

    <Button
        android:id="@+id/btnMisProductos"
        android:layout_width="190dp"
        android:layout_height="55dp"

        android:layout_marginTop="24dp"
        android:background="@drawable/circular_button_backgroundorange"
        android:onClick="irMisProductos"
        android:text="@string/botonProductosrNegocio"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/imageView4"
        app:layout_constraintTop_toBottomOf="@+id/btnEliminarNegocio"
        tools:ignore="VisualLintOverlap,VisualLintButtonSize,TextContrastCheck" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/basura"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/engrane"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView25" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/lista"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />


</androidx.constraintlayout.widget.ConstraintLayout>