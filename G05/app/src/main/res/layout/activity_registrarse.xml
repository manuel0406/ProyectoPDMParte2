<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".seguridad.RegistrarseActivity"
    tools:ignore="VisualLintBounds">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/trasparente"
        tools:ignore="ExtraText,MissingConstraints,SpeakableTextPresentCheck">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/trasparente"
            android:orientation="vertical"
            android:paddingStart="80dp"
            android:paddingEnd="56dp">

            <ImageView
                android:id="@+id/imgLogo"
                android:layout_width="258dp"
                android:layout_height="208dp"
                android:layout_marginTop="32dp"
                android:src="@drawable/logo_general"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ContentDescription,ImageContrastCheck" />

            <TextView
                android:id="@+id/lblCorreo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:importantForAutofill="no"
                android:text="@string/correoUsuario"
                android:textStyle="bold"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.217"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imgLogo"
                tools:ignore="VisualLintOverlap"
            />

            <EditText
                android:id="@+id/txtCorreo"
                android:layout_width="260dp"
                android:layout_height="48dp"
                android:layout_marginTop="12dp"
                android:ems="10"
                android:hint="@string/entradaCorreo"
                android:inputType="textEmailAddress"
                android:textColor="@color/black"
                android:textColorHint="@color/gris"
                android:textCursorDrawable="@drawable/color_cursor"
                android:backgroundTint="@drawable/edit_text_line_colors"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.509"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lblCorreo"
                tools:ignore="Autofill,TextContrastCheck"
            />

            <TextView
                android:id="@+id/lblNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:importantForAutofill="no"
                android:text="@string/nombreUsuario"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/txtCorreo"
                app:layout_constraintTop_toBottomOf="@+id/txtCorreo"
                tools:ignore="VisualLintOverlap"
            />

            <EditText
                android:id="@+id/txtNombre"
                android:layout_width="260dp"
                android:layout_height="48dp"
                android:layout_marginTop="12dp"
                android:ems="10"
                android:hint="@string/entradaNombre"
                android:inputType="text"
                android:textColor="@color/black"
                android:textColorHint="@color/gris"
                android:textCursorDrawable="@drawable/color_cursor"
                android:backgroundTint="@drawable/edit_text_line_colors"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.509"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lblNombre"
                tools:ignore="Autofill,TextContrastCheck"
            />

            <TextView
                android:id="@+id/lblApellido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:importantForAutofill="no"
                android:text="@string/apellidoUsuario"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/txtNombre"
                app:layout_constraintTop_toBottomOf="@+id/txtNombre"
                tools:ignore="VisualLintOverlap"
            />

            <EditText
                android:id="@+id/txtApellido"
                android:layout_width="260dp"
                android:layout_height="48dp"
                android:layout_marginTop="14dp"
                android:ems="10"
                android:hint="@string/entradaApellido"
                android:inputType="text"
                android:textColor="@color/black"
                android:textColorHint="@color/gris"
                android:textCursorDrawable="@drawable/color_cursor"
                android:backgroundTint="@drawable/edit_text_line_colors"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lblApellido"
                tools:ignore="Autofill,TextContrastCheck"
            />

            <TextView
                android:id="@+id/lblNacimiento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:importantForAutofill="no"
                android:text="@string/nacimientoUsuario"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/txtApellido"
                app:layout_constraintTop_toBottomOf="@+id/txtApellido"
                tools:ignore="VisualLintOverlap"
            />

            <TextView
                android:id="@+id/lblFechaNacimiento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:importantForAutofill="no"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                tools:ignore="VisualLintOverlap"
            />

            <Button
                android:id="@+id/btnNacimiento"
                android:layout_width="280dp"
                android:layout_height="48dp"
                android:layout_marginTop="14dp"
                android:background="@color/black"
                android:onClick="abrirCalendario"
                android:text="@string/btnNacimiento"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.473"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lblNacimiento"
                tools:ignore="VisualLintBounds,TextSizeCheck" />

            <TextView
                android:id="@+id/lblSexo"
                android:layout_width="70dp"
                android:layout_height="20dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="284dp"
                android:importantForAutofill="no"
                android:text="@string/sexoUsuario"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnNacimiento"
                tools:ignore="VisualLintOverlap,TextSizeCheck,VisualLintBounds"
            />

            <Spinner
                android:id="@+id/sSexo"
                android:layout_width="260dp"
                android:layout_height="45dp"
                android:layout_marginTop="12dp"
                android:entries="@array/opciones_sexo"
                android:prompt="@string/entradaSexo"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.477"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lblSexo"
                tools:ignore="VisualLintBounds,TouchTargetSizeCheck"
            />

            <TextView
                android:id="@+id/lblContra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/contraUsuario"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/sSexo"
                app:layout_constraintTop_toBottomOf="@+id/sSexo"
                tools:ignore="VisualLintOverlap,VisualLintBounds"
            />

            <EditText
                android:id="@+id/txtContra"
                android:layout_width="260dp"
                android:layout_height="48dp"
                android:layout_marginTop="14dp"
                android:autofillHints=""
                android:ems="10"
                android:maxLength="8"
                android:hint="@string/entradaContra"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:textColorHint="@color/gris"
                android:textCursorDrawable="@drawable/color_cursor"
                android:backgroundTint="@drawable/edit_text_line_colors"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.468"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lblContra"
                tools:ignore="TouchTargetSizeCheck,TextContrastCheck,VisualLintOverlap,VisualLintTextFieldSize,VisualLintBounds"
            />

            <TextView
                android:id="@+id/lblNuevaContra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/ncontraUsuario"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/txtContra"
                app:layout_constraintTop_toBottomOf="@+id/txtContra"
                tools:ignore="VisualLintOverlap,VisualLintBounds"
            />

            <EditText
                android:id="@+id/txtNuevaContra"
                android:layout_width="260dp"
                android:layout_height="48dp"
                android:layout_marginTop="12dp"
                android:autofillHints=""
                android:ems="10"
                android:maxLength="8"
                android:hint="@string/nentradaContra"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:textColorHint="@color/gris"
                android:textCursorDrawable="@drawable/color_cursor"
                android:backgroundTint="@drawable/edit_text_line_colors"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.461"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lblNuevaContra"
                tools:ignore="TouchTargetSizeCheck,TextContrastCheck,VisualLintOverlap,VisualLintTextFieldSize,VisualLintBounds"
            />

            <Button
                android:id="@+id/btnRegistrarse"
                android:layout_width="190dp"
                android:layout_height="48dp"
                android:layout_marginTop="14dp"
                android:background="@drawable/circular_button_backgroundorange"
                android:text="@string/botonRegistrarse"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:onClick="irRolRegistrarse"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnIniciarSesion"
                tools:ignore="VisualLintOverlap,VisualLintButtonSize,TextContrastCheck"
            />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>