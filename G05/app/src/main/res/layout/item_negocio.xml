<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:backgroundTint="#efefef"
    app:cardCornerRadius="0dp"
    app:cardElevation="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/txtNegocioNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Nombre del Negocio"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1B877971"
            android:orientation="vertical"
            android:padding="10dp">


            <TextView
                android:id="@+id/txtNegocioId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ID del Negocio: 123456"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtNegocioUbicacionId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="ID de la ubicaciÃ³n del Negocio: 789012"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtNegocioAdministradorId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="ID del administrador del Negocio: 789012"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtNegocioTelefono"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Telefono: 78899878"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtNegocioApertura"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Horario de apertura: 06:00 AM"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtNegocioCierre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Horario de cierre: 12:00 PM"
                android:textSize="16sp" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="20dp">

                <TextView
                    android:id="@+id/txtNegocioDireccion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Direccion: San Marcos, San Salvador"
                    android:textSize="16sp" />

            </ScrollView>

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>